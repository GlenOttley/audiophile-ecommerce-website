{
  "name": "audiophile-ecommerce-website",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^5.3.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "dev": "lerna run dev",
    "test": "lerna run test",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "start": "node packages/server/dist/server.js",
    "tsc": "./node_modules/typescript/bin/tsc",
    "build": "tsc -p ./packages/server/tsconfig.json",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn run build && yarn install --cwd packages/client && yarn run build --prefix packages/client"
  }
}
